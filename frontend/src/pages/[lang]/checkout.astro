---
import PaymentPage from "@/components/Payment.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "i18n";
import { LANGS } from "@/utils/constants";
import type { i18nTranslations } from "@/types/types";

// Obtenemos el idioma obtenido mediante la ruta
const { lang } = Astro.params;
const data = getI18N({ lang }) as i18nTranslations;

// Generamos las rutas
export async function getStaticPaths() {
  return LANGS.map((lang) => ({
    params: { lang },
  }));
}
---

<Layout lang={lang || "es"} noindex={true}>
  <!-- <App data={data}> -->
  <main class="h-screen flex flex-col justify-center items-center align-middle pb-44">
    <PaymentPage />
  </main>
  <!-- </App> -->
</Layout>
