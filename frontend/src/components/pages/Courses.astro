---
import CardModule from "@/components/courses/CardModule.astro";
import Title from "@/components/common/Title.astro";
import type { CourseI18n } from "@/types/types";

const data = Astro.props.data as CourseI18n;
---

<div class="mb-20 text-black">
  <Title customStyleText="text-2xl " customStyleLine="w-20 mb-10">{data.title}</Title>
  <div class="text-center m-auto w-3/4 xl:w-1/2">
    {data.summary.map((data, _) => <p>{data}</p>)}
  </div>
  <div class="flex flex-col md:flex-row w-full xl:w-3/4 m-auto px-0 md:px-10 lg:px-0 scroll-fade-in">
    <div class="min-w-96 p-10 flex flex-col justify-center align-middle items-center">
      <h1 class="text-red font-semibold text-2xl">
        {data.ideal_for.title}<br /><span class="text-[--color-salmon]">{data.ideal_for.title_color}</span>
      </h1>
      <img src="/img/salmon.webp" alt="" class="w-96 h-auto min-h-32 sm:min-h-40 my-2 object-cover" />
    </div>
    <div class="flex flex-col justify-center items-start px-5 md:px-0">
      {
        data.ideal_for.points.map((data, i) => (
          <div class="m-3 flex justify-center items-start flex-col md:flex-row ">
            <div class="flex justify-center items-center">
              <div class="bg-salmon min-w-6 h-6 rounded-full m-3 text-white flex justify-center align-middle">
                {i + 1}
              </div>
              <h2 class="font-semibold text-red min-w-20 lg:min-w-36 text-sm lg:text-base max-w-96 lg:max-w-36 md:mx-3">
                {data.title}
              </h2>
            </div>
            <p class="text-sm text-black">{data.description}</p>
          </div>
        ))
      }
    </div>
  </div>
  <div class="w-full md:w-1/2 p-10 md:m-auto scroll-fade-in">
    {
      data.modules.length > 0 ? (
        data.modules.map((module, index) => <CardModule data={module} index={index} />)
      ) : (
        <h3 class="text-center text-3xl text-red text-bold font-jomolhari">Proximamente...</h3>
      )
    }
  </div>
</div>
