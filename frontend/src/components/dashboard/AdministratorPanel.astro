---
import { DashboardAdminTypes } from "@/types/types";
import LinkDashboardAdmin from "./LinkDashboardAdmin.astro";
---

<!-- Panel de Administración -->
<div id="admin-panel" class="fixed bottom-3 right-8 z-[999] group">
  <!-- Botón principal flotante -->
  <button
    id="admin-toggle"
    class="relative flex items-center justify-center w-14 h-14 bg-gradient-to-br from-lightRed to-salmon rounded-full shadow-lg hover:shadow-2xl transition-all duration-300 hover:scale-110 active:scale-95 group-hover:rotate-90"
    aria-label="Toggle admin panel"
  >
    <!-- Icono de administrador -->
    <svg
      class="w-5 h-5 text-white transition-transform duration-300"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
      ></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>
  </button>

  <!-- Panel desplegable -->
  <div
    id="admin-menu"
    class="absolute bottom-20 right-0 w-80 bg-gray-100 rounded-2xl shadow-2xl opacity-0 invisible transition-all duration-300 transform translate-y-4"
  >
    <!-- Header del panel -->
    <div class="bg-gradient-to-r from-gray-900 to-gray-600 p-5 rounded-t-2xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div>
            <h3 class="text-gray-200 font-bold text-lg">Panel Admin</h3>
          </div>
        </div>
        <button id="admin-close" class="text-white rounded-lg p-1.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Contenido del panel -->
    <div class="p-4 space-y-3 overflow-y-auto">
      <!-- Enlaces de navegación -->
      <!-- Dashboard -->
      <LinkDashboardAdmin title={DashboardAdminTypes.DASHBOARD} subtitle="Estadísticas generales">
        <svg class="w-5 h-5 text-lightRed" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
          ></path>
        </svg>
      </LinkDashboardAdmin>
      <LinkDashboardAdmin title={DashboardAdminTypes.USERS} subtitle="Gestionar estudiantes">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
          ></path>
        </svg>
      </LinkDashboardAdmin>
      <LinkDashboardAdmin title={DashboardAdminTypes.COURSES} subtitle="Contenido educativo">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
          ></path>
        </svg>
      </LinkDashboardAdmin>
      <LinkDashboardAdmin title={DashboardAdminTypes.CLASSES} subtitle="Reservas y calendario">
        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </LinkDashboardAdmin>
      <LinkDashboardAdmin title={DashboardAdminTypes.PAYMENTS} subtitle="Transacciones Stripe">
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
        </svg>
      </LinkDashboardAdmin>
      <LinkDashboardAdmin title={DashboardAdminTypes.CONTENT} subtitle="Artículos y recursos">
        <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
          ></path>
        </svg>
      </LinkDashboardAdmin>
    </div>
  </div>
</div>

<script>
  // Toggle del panel de administración
  const adminToggle = document.getElementById("admin-toggle");
  const adminMenu = document.getElementById("admin-menu");
  const adminClose = document.getElementById("admin-close");

  function toggleMenu() {
    if (adminMenu) {
      const isVisible = !adminMenu.classList.contains("invisible");

      if (isVisible) {
        adminMenu.classList.remove("opacity-100", "translate-y-0");
        adminMenu.classList.add("opacity-0", "translate-y-4");
        setTimeout(() => {
          adminMenu.classList.add("invisible");
        }, 300);
      } else {
        adminMenu.classList.remove("invisible", "opacity-0", "translate-y-4");
        adminMenu.classList.add("opacity-100", "translate-y-0");
      }
    }
  }

  if (adminToggle) {
    adminToggle.addEventListener("click", toggleMenu);
  }

  if (adminClose) {
    adminClose.addEventListener("click", toggleMenu);
  }

  // Cerrar al hacer click fuera del panel
  document.addEventListener("click", (e) => {
    const adminPanel = document.getElementById("admin-panel");
    if (adminPanel && adminMenu && !adminPanel.contains(e.target as Node)) {
      if (!adminMenu.classList.contains("invisible")) {
        toggleMenu();
      }
    }
  });
</script>

<style>
  /* Animaciones suaves para el panel */
  #admin-menu {
    transition:
      opacity 0.3s ease,
      transform 0.3s ease,
      visibility 0.3s;
  }

  /* Efecto de pulsación para el botón principal */
  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.5);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
    }
  }

  #admin-toggle:hover {
    animation: pulse 2s infinite;
  }

  /* Scrollbar personalizado para el menú */
  #admin-menu::-webkit-scrollbar {
    width: 6px;
  }

  #admin-menu::-webkit-scrollbar-track {
    background: transparent;
  }

  #admin-menu::-webkit-scrollbar-thumb {
    background: #cbd5e0;
    border-radius: 3px;
  }

  #admin-menu::-webkit-scrollbar-thumb:hover {
    background: #a0aec0;
  }

  .dark #admin-menu::-webkit-scrollbar-thumb {
    background: #4a5568;
  }

  .dark #admin-menu::-webkit-scrollbar-thumb:hover {
    background: #718096;
  }
</style>
