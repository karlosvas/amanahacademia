---
import { log } from "@/services/logger";
import type { CalBookingPayload } from "@/types/bakend-types";
import type { PricingI18n } from "@/types/types";

interface Props {
  data?: PricingI18n;
  booking?: CalBookingPayload;
  i?: number;
  showDetails?: boolean;
}

const { booking, i, showDetails, data } = Astro.props;

let startDate,
  endDate: Date | null = null;
let color,
  label,
  title = "";

if (booking) {
  startDate = booking.startTime ? new Date(booking.startTime) : null;
  endDate = booking.endTime ? new Date(booking.endTime) : null;
  const statusColors = {
    accepted: "bg-green-100 text-green-800 border-green-300",
    pending: "bg-yellow-100 text-yellow-800 border-yellow-300",
    cancelled: "bg-red-100 text-red-800 border-red-300",
    rejected: "bg-gray-100 text-gray-800 border-gray-300",
  };
  const statusText = {
    accepted: "Confirmada",
    pending: "Pendiente",
    cancelled: "Cancelada",
    rejected: "Rechazada",
  };

  const key = (booking.status ?? "").toLowerCase() as keyof typeof statusColors;
  color = statusColors[key] ?? statusColors.pending;
  label = statusText[key] ?? booking.status;

  log.info(booking);
  const titleArr = booking.title?.split(" ");
  if (titleArr) title += titleArr[3] + " " + titleArr[4] + " (" + booking?.metadata?.language_level + ")";
}

const PayloadNoClass = {
  no_classes: {
    title: "No hay clases disponibles",
    description: "Por el momento no hay clases programadas. Pronto añadiremos nuevas opciones.",
    badge: "Próximamente",
  },
};
---

{
  booking != null ? (
    <article
      data-showDetails={showDetails}
      data-class-id={booking.uid}
      class={`${showDetails ? "" : "carousel-slide absolute top-1/2 left-1/2 h-auto"} active cursor-pointer select-none flex flex-col items-center justify-center w-10/12 max-w-lg bg-gradient-to-br from-gray-50 to-gray-100 dark:from-[#412c26] dark:to-[#583931] rounded-2xl`}
      style={showDetails ? "" : "transform: translate(-50%, -50%);"}
      data-index={showDetails ? null : i}
      aria-hidden={showDetails ? false : i !== 0}
    >
      <figure class="flex flex-col items-center text-center w-full px-4">
        <div class="relative group w-full">
          <div
            class="absolute -inset-1 rounded-3xl blur opacity-20 group-hover:opacity-40 transition-opacity duration-300"
            aria-hidden="true"
          />
          <div
            class={`${showDetails ? "" : "carousel-img"}  relative  rounded-xl hover:shadow-red-500/20 transition-all duration-300 ease-out p-6 md:p-8 text-gray-600 dark:text-gray-300`}
          >
            {/* Header con título y estado */}
            <div class="flex flex-col items-center gap-3 mb-6">
              <div class="bg-red/10 rounded-full p-4">
                <svg class="w-10 h-10 md:w-12 md:h-12 text-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
              </div>
              <h3 class="text-xl lg:text-2xl font-bold text-gray-800 dark:text-gray-100">
                Reserva Grupal <br />
                {title}
              </h3>
              <span class={`px-4 py-1.5 rounded-full text-xs sm:text-sm font-semibold border ${color}`}>{label}</span>
            </div>

            {/* Información de fecha y hora */}
            {startDate && (
              <div class="space-y-3 mb-6">
                <div class="flex items-center justify-center gap-2 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  <span class="text-sm md:text-base font-medium">
                    {startDate.toLocaleDateString("es-ES", {
                      weekday: "long",
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </span>
                </div>
                <div class="flex items-center justify-center gap-2 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <span class="text-sm md:text-base font-medium">
                    {startDate.toLocaleTimeString("es-ES", { hour: "2-digit", minute: "2-digit" })}
                    {endDate && ` - ${endDate.toLocaleTimeString("es-ES", { hour: "2-digit", minute: "2-digit" })}`}
                  </span>
                </div>
              </div>
            )}

            {/* Organizador */}
            {booking.organizer && (
              <div class="bg-lightBrown/20 rounded-xl p-4 mb-4">
                <p class="text-xs  mb-1">Profesor</p>
                <p class="text-sm md:text-base font-semibold text-gray-800">{booking.organizer.name}</p>
                <p class="text-xs ">{booking.organizer.email}</p>
              </div>
            )}

            {/* Descripción */}
            {booking.description && (
              <p class="text-xs sm:text-sm  leading-relaxed mb-4 bg-white/50 rounded-lg p-3">{booking.description}</p>
            )}

            {/* Razón de cancelación si existe */}
            {booking.cancellationReason && (
              <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-3">
                <p class="text-xs text-red-700">
                  <strong>Motivo:</strong> {booking.cancellationReason}
                </p>
              </div>
            )}
          </div>
        </div>
      </figure>
    </article>
  ) : (
    <article class="cursor-pointer select-none flex flex-col items-center justify-center w-full h-full">
      <figure class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-[#412c26] dark:to-[#583931] rounded-2xl p-8 max-w-md w-full shadow-lg">
        <div class="flex flex-col items-center text-center space-y-4">
          <div class="w-16 h-16 bg-red/10 rounded-full flex items-center justify-center">
            <svg
              class="w-8 h-8 text-red"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">
            {data?.no_classes.title || PayloadNoClass.no_classes.title}{" "}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            {data?.no_classes.description || PayloadNoClass.no_classes.description}
          </p>
          <div class="pt-2">
            <span class="inline-flex items-center gap-2 text-red font-medium text-sm">
              <svg class="w-5 h-5 animate-pulse rounded-full" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                  clip-rule="evenodd"
                />
              </svg>
              {data?.no_classes.badge || PayloadNoClass.no_classes.badge}
            </span>
          </div>
        </div>
      </figure>
    </article>
  )
}

<script>
  import { ApiService } from "@/services/helper";
  import { log } from "@/services/logger";
  import type { CalBookingPayload, ResponseAPI } from "@/types/bakend-types";

  document.addEventListener("DOMContentLoaded", async () => {
    const elements = document.querySelectorAll<HTMLElement>("[data-class-id]");

    // Evitamos que nos lleve al pago si solo estamos mostradno los detalles
    const dataShowDetails = elements[0]?.dataset.showdetails === "true";
    if (dataShowDetails) return;

    elements.forEach((el) => {
      el.addEventListener("click", async () => {
        try {
          const selectedClass = el.dataset.classId;

          if (!selectedClass) {
            log.error("The selectedClass is undefined or null", selectedClass);
            return;
          }

          const helper = new ApiService();
          const response: ResponseAPI<CalBookingPayload> = await helper.getBookingById(selectedClass);

          if (!response.success || !response.data) {
            log.error("Error with getting booking by ID", response);
            return;
          } else if (!import.meta.env.PUBLIC_FRONTEND_URL) {
            log.error("PUBLIC_FRONTEND_URL is not defined");
            return;
          }

          // Validar que exista el uid antes de continuar
          if (!response.data.uid) {
            log.error("The booking UID is missing", response);
            return;
          }

          const params = new URLSearchParams({
            uid: response.data.uid,
            type: response.data.metadata?.slugType || "group-class",
            status: response.data.status || "pending",
          });

          location.href = `${import.meta.env.PUBLIC_FRONTEND_URL}/payment?${params}`;
        } catch (error) {
          log.error("Error selecting booking", error);
        }
      });
    });
  });
</script>

<style>
  @keyframes slideInFromRight {
    from {
      opacity: 0;
      transform: translate(50%, -50%) scale(0.85) rotateY(-15deg);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1) rotateY(0);
    }
  }

  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translate(-150%, -50%) scale(0.85) rotateY(15deg);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1) rotateY(0);
    }
  }

  @keyframes slideOutToLeft {
    from {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1) rotateY(0);
    }
    to {
      opacity: 0;
      transform: translate(-150%, -50%) scale(0.85) rotateY(15deg);
    }
  }

  @keyframes slideOutToRight {
    from {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1) rotateY(0);
    }
    to {
      opacity: 0;
      transform: translate(50%, -50%) scale(0.85) rotateY(-15deg);
    }
  }

  .carousel-slide {
    opacity: 0;
    z-index: 0;
    pointer-events: none;
    transform: scale(0.85);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .carousel-slide.active {
    opacity: 1;
    z-index: 30;
    pointer-events: auto;
    transform: scale(1);
  }

  .carousel-slide.exit-right {
    animation: slideOutToRight 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    z-index: 20;
  }

  .carousel-slide.exit-left {
    animation: slideOutToLeft 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    z-index: 20;
  }

  .carousel-slide.enter-right {
    animation: slideInFromRight 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    z-index: 30;
  }
  .carousel-slide.enter-left {
    animation: slideInFromLeft 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    z-index: 30;
  }

  .carousel-img {
    filter: brightness(0.85) saturate(1.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .carousel-slide.active .carousel-img {
    filter: brightness(1) saturate(1);
  }

  .carousel-dot {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .carousel-dot:hover {
    transform: scale(1.15) !important;
    background-color: #f87171 !important;
  }
</style>
