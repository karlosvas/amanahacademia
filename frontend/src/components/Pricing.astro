---
import CardPricing from "./CardPricing.astro";
import ModalPracing from "./ModalPracing.astro";
import Title from "./Title.astro";
import type { PricingI18n } from "@/types/types";

const data = Astro.props.data as PricingI18n;
---

<main class="relative text-black">
  <div class="w-full lg:w-3/4 m-auto px-2 md:px-0 max-w-[1000px]">
    <Title sizeText="text-2xl" sizeLine="h-1" sizeWidth="w-16">{data.title}</Title>
    <div
      class="flex flex-col md:flex-row justify-center items-stretch h-auto md:h-[600px] xl:h-[550px] gap-4 md:gap-6 m-2 md:m-4"
    >
      <CardPricing data={data.type.standard} buttonID="button-estandar" />
      <CardPricing data={data.type.conversation} buttonID="button-conversation" />
      <CardPricing data={data.type.group} buttonID="button-group" />
    </div>
    <div class="w-full flex flex-col md:flex-row text-sm mt-8 md:mt-20 m-auto pb-8 md:pb-20 p-5 md:p-0 gap-4 md:gap-6">
      <div class="mx-0 md:mx-3">
        <h4 class="text-[--color-salmon] text-lg font-semibold">
          {data.info[0].title}
        </h4>
        <p class="mt-2">
          {data.info[0].description}
        </p>
        <button class="bg-red text-salmon py-2 px-6 md:px-10 rounded-full mt-5 text-xs md:text-sm">
          {data.info[0].button}
        </button>
      </div>
      <div class="mx-0 md:mx-3 mb-10 md:mb-20">
        <h4 class="text-[--color-salmon] text-lg font-semibold">
          {data.info[1].title}
        </h4>
        <p class="mt-2">
          {data.info[1].description}
        </p>
      </div>
    </div>
  </div>
  <ModalPracing id="modal-estandar" name="Clase Estándar" />
  <ModalPracing id="modal-conversation" name="Clase de Conversación" />
  <ModalPracing id="modal-group" name="Clase en Grupo" />
</main>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const reserveButton = document.querySelectorAll(".reserve-class") as NodeListOf<HTMLButtonElement>;
    reserveButton.forEach((button) => {
      button.addEventListener("click", () => {
        // Obtenemos que modal pertenece
        const modalId = button.id.replace("button-", "modal-");
        const modal = document.getElementById(modalId) as HTMLDialogElement;
        if (modal) {
          modal.showModal();
        }
      });
    });
  });
</script>
