---
import type { SecurityHallOfFameI18n } from "@/types/types";

const data = Astro.props.data as SecurityHallOfFameI18n;
---

<main class="bg-gray-900 py-20 security-selection">
  <div class="max-w-4xl mx-auto p-8">
    <div class="mb-10 text-center">
      <h1 class="text-5xl font-extrabold text-green-300 mb-2">🔒 {data.title}</h1>
      <p class="subtitle text-green-100 text-lg">{data.subtitle}</p>
    </div>

    <p class="text-gray-100 text-center text-base px-10 pb-10">
      {data.intro}
    </p>

    <h1 class="text-3xl font-extrabold text-green-300 mb-2">{data.examples_title}</h1>
    <div class="hall-of-fame grid gap-8">
      {
        data.researchers.map((researcher) => (
          <div class="rounded-xl shadow-lg border-2 border-light-brown bg-white/90 transition-transform transition-shadow duration-200 hover:-translate-y-1 hover:scale-105 hover:shadow-2xl">
            <div class="flex items-center gap-3 px-6 py-4 rounded-t-xl shadow-sm">
              <span class="w-4 h-4 rounded-full bg-green-400 shadow-[0_0_8px_2px_rgba(122,255,151,0.5)]" />
              <h2 class="text-2xl font-bold text-green-200">{researcher.name}</h2>
              <span class="bg-blue-400 text-gray-100 px-3 py-1 rounded-full text-xs font-semibold ml-auto tracking-wide">
                {researcher.severity}
              </span>
            </div>
            <div class="px-6 py-4">
              <p class="text-green-100 font-medium mb-2">{researcher.title}</p>
              <div class="text-green-200 font-semibold mb-1">
                <i>🔍</i> {researcher.finding_title}
              </div>
              <p class="text-gray-100 mb-2">{researcher.finding_desc}</p>
            </div>
          </div>
        ))
      }
      <div class="thank-you mt-12 text-center">
        <h2 class="text-3xl font-bold text-green-300 mb-2">{data.thank_you_title}</h2>
        <p class="text-gray-100 text-base">
          {data.thank_you_desc}
        </p>
      </div>
    </div>
  </div>
</main>
