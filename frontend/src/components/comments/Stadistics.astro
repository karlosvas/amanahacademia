---
const { title, percentage } = Astro.props;
---

<div class="space-y-1.5">
  <div class="flex items-center justify-between">
    <h6 class="text-xs font-medium truncate pr-2">{title}</h6>
    <span class="text-xs font-semibold flex-shrink-0">{percentage}%</span>
  </div>

  <!-- Barra de progreso -->
  <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
    <div
      class="h-2 rounded-full"
      style={`
        width: ${percentage}%;
        background: linear-gradient(135deg, var(--color-brown) 0%, var(--color-light-brown) 100%);
      `}
    >
    </div>
  </div>
</div>
